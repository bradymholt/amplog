{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "src",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${workspaceRoot}/bin/amplog.js"]
    },
    {
      "name": "Test - All",
      "type": "node",
      "request": "launch",      
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand"]      
    },
    {
      "name": "Test - Current File",
      "type": "node",
      "request": "launch",      
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["${relativeFile}"]      
    },
    {
      "name": "Test - builder.ts",
      "type": "node",
      "request": "launch",      
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["${workspaceFolder}/tests/builder.test.ts"]      
    }    
  ]
}
