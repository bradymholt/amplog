{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run current tests",
      "type": "shell",
      "command": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "${relativeFile}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Run all tests",
      "command": "npm",
      "args": [
        "test"
      ],
      "problemMatcher": []
    }
  ]
}