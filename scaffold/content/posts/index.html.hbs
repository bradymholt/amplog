---
title: Posts
---
{{#> default }}
<div>
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
  </header>
  <article class="post-content">
    <section id="archive">
      {{#group pages by="year"}}
      <h3>{{ value }}</h3>
      <ul>
        {{#each items}}
        <li>
          <time datetime="{{ date }}">{{ dateFormat date "dd mmm" }}</time><a href="/{{ path }}">{{ title }}</a>
        </li>
        {{/each}}
      </ul>
      {{/group}}
    </section>
  </article>
</div>
{{/default}}