<!DOCTYPE html>
<html lang="en">
{{> head }}

<body>
  {{> header }}
  <div class="page-content">
    <div class="wrapper">
      {{> sidebar }}
      <div class="post">
        <header class="post-header">
          <h1 class="post-title">
            {{ title }}
          </h1>
          {{#if date }}
            <p class="post-meta">{{ dateFormat this.date "mmmm d, yyyy" }}</p>
          {{/if}}
        </header>
        <article class="post-content">
          {{{ content }}}
        </article>
      </div>
    </div>
  </div>
  <div class="wrapper">
    {{> footer }}
  </div>
  {{> google_analytics }}
</body>

</html>