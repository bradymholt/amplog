<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title }}</title>
    <description>{{ site.description }}</description>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}/{{ page.slug }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time }}</pubDate>
    <lastBuildDate>{{ site.time }}</lastBuildDate>
    <generator>amplog</generator>
    {{#each pages}}
      <item>
        <title>{{ this.title }}</title>
        <description>{{ this.blurb }}</description>
        <pubDate>{{ this.date }}</pubDate>
        <link>{{ site.url }}/{{ this.slug }}</link>
        <guid isPermaLink="true">{{ site.url }}/{{ this.slug }}</guid>
      </item>
    {{/each}}
  </channel>
</rss>
