<!DOCTYPE html>
<html lang="en">
{{> head }}
<body>
  {{> header }}
  <div class="page-content">
    <div class="wrapper">
      {{> sidebar }}
      <div class="post">
        <header class="post-header">
          <h1 class="post-title">
            {{ page.title }}
          </h1>
          {{#if page.date}}
          <p class="post-meta">
            {{ page.date }}
          </p>
          {{/if}}
        </header>
        <article class="post-content">
          {{{ page.content }}}
        </article>
      </div>
    </div>
  </div>
  <div class="wrapper">
    {{> footer }}
  </div>
</body>
</html>